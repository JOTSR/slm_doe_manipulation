{
	"version": "0.1.0",
	"workspace": ["core", "cli", "gui"],
	"imports": {
		"preact": "npm:preact@^10.24.3"
	},
	"fmt": {
		"singleQuote": true,
		"useTabs": true,
		"semiColons": false
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"dom.iterable",
			"deno.ns"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	}
}
